    "jest": "^24.9.0",
    "microbundle": "^0.12.0-next.6",
    "react": "experimental",
    "react-dom": "experimental",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
